{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es6",
        "sourceMap": true,
        "lib": [
            "es6"
        ],
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}